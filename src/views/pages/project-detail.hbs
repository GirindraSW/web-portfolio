<section class="py-5">
  <div class="container">
    <a href="/" class="btn btn-sm btn-outline-dark mb-4"><i class="fa-solid fa-arrow-left me-2"></i>Back</a>
    <div class="card border-0 shadow-sm">
      <div class="card-body p-4 p-lg-5">
        <h1 class="h3 fw-bold mb-3">{{project.name}}</h1>
        <p class="text-muted mb-4">{{project.description}}</p>
        <h2 class="h6 text-uppercase text-muted mb-3">Tech Stack</h2>
        <div class="d-flex flex-wrap gap-2">
          {{#each project.tech}}
          <span class="badge text-bg-light border">{{this}}</span>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
